{
  "plugins": [
    "stylelint-scss",
    "stylelint-order"
  ],
  "fix": true,
  "extends": [
    "stylelint-config-standard"
  ],
  "rules": {
    "value-keyword-case": [
      "lower"
    ],
    "indentation": 4,
    "number-leading-zero": "never",
    "no-descending-specificity": null,
    "string-quotes": ["single", { "avoidEscape": true }],
    "scss/at-rule-no-unknown": true,
    "scss/selector-no-redundant-nesting-selector": true,
    "order/order": [
      "custom-properties",
      "declarations",
      "rules"
    ]
  }
}
